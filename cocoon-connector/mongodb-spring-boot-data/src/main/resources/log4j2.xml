<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- 输出日志到指定文件夹，dao日志异步，service日志同步 -->
    <Appenders>
        <!-- dao日志异步输出到文件 -->
        <Async name="daoAsync">
            <AppenderRef ref="daoFile"/>
        </Async>
        <!-- service日志同步输出到文件 -->
        <File name="serviceFile" fileName="logs/service.log" immediateFlush="true" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <!-- dao日志同步输出到文件 -->
        <File name="daoFile" fileName="logs/dao.log" immediateFlush="true" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <!-- 控制台输出 -->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <!-- 日志输出级别 -->
    <Loggers>
        <!-- 业务日志 -->
        <Logger name="com.example.demo.service" level="info" additivity="false">
            <AppenderRef ref="serviceFile"/>
        </Logger>
        <!-- dao日志 -->
        <Logger name="com.example.demo.dao" level="info" additivity="false">
            <AppenderRef ref="daoAsync"/>
        </Logger>
        <!-- 无日志输出 -->
        <Logger name="com.example.demo" level="off"/>
        <!-- 控制台输出 -->
        <Root level="warn">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>